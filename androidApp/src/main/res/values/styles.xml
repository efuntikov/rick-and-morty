<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- TextRegularStyle and TextHeavyStyle are the parent fonts of the typo components
        Do not use it directly to your layouts -->
    <style name="TextRegularStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextHeavyStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextCapsHeavyStyle">
        <item name="android:fontFamily">@font/roboto_heavy</item>
    </style>

    <style name="TextStyle.Body" parent="TextRegularStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">@dimen/text_body_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_line_spacing_extra</item>
    </style>

    <style name="SubHeaderStyle" parent="TextStyle.Body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/background_secondary</item>
        <item name="android:paddingTop">@dimen/small_margin</item>
        <item name="android:paddingStart">@dimen/normal_margin</item>
        <item name="android:paddingEnd">@dimen/normal_margin</item>
        <item name="android:paddingBottom">@dimen/xsmall_margin</item>
    </style>

    <style name="TextStyle.Body_Heavy" parent="TextHeavyStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">@dimen/text_body_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_line_spacing_extra</item>
    </style>

    <style name="TextStyle.Caps_Heavy" parent="TextCapsHeavyStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">@dimen/text_body_size</item>
        <item name="android:letterSpacing">@dimen/text_letter_spacing_extra</item>
        <item name="android:lineSpacingExtra">@dimen/text_line_spacing_extra</item>
    </style>

    <!-- Heading 1 -->
    <style name="TextStyle.Heading1" parent="TextStyle.Body_Heavy">
        <item name="android:textSize">@dimen/text_heading1</item>
    </style>

    <style name="TextStyle.Heading1.Primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Heading1.Critical">
        <item name="android:textColor">@color/text_critical</item>
    </style>

    <style name="TextStyle.Heading1.White">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!-- Heading 2 -->
    <style name="TextStyle.Heading2" parent="TextStyle.Body_Heavy">
        <item name="android:textSize">@dimen/text_heading2</item>
    </style>

    <style name="TextStyle.Heading2.Critical">
        <item name="android:textColor">@color/text_critical</item>
    </style>

    <style name="TextStyle.Heading2.Primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Heading2.White">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!-- Heading 3 -->
    <style name="TextStyle.Heading3" parent="TextStyle.Body_Heavy">
        <item name="android:textSize">@dimen/text_heading3</item>
    </style>

    <style name="TextStyle.Heading3.Critical">
        <item name="android:textColor">@color/text_critical</item>
    </style>

    <style name="TextStyle.Heading3.Primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Heading3.White">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!-- Heading 4 -->
    <style name="TextStyle.Heading4" parent="TextStyle.Body_Heavy">
        <item name="android:textSize">@dimen/text_heading4</item>
    </style>

    <style name="TextStyle.Heading4.Critical">
        <item name="android:textColor">@color/text_critical</item>
    </style>

    <style name="TextStyle.Heading4.Primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Heading4.White">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextStyle.Heading4.ForegroundPrimaryLight">
        <item name="android:textColor">@color/foreground_primary</item>
    </style>

    <!-- Heading Caps -->
    <style name="TextStyle.Heading_Caps" parent="TextStyle.Body_Heavy">
        <item name="android:textSize">@dimen/text_heading_caps</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStyle.Heading_Caps.Critical">
        <item name="android:textColor">@color/text_critical</item>
    </style>

    <style name="TextStyle.Heading_Caps.Primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Heading_Caps.AccentSecondary">
        <item name="android:textColor">@color/accent_secondary</item>
    </style>

    <style name="TextStyle.Heading_Caps.ForegroundSecondary">
        <item name="android:textColor">@color/foreground_secondary</item>
    </style>

    <style name="TextStyle.Heading_Caps.AccentTertiary">
        <item name="android:textColor">@color/accent_tertiary</item>
    </style>

    <style name="TextStyle.Heading_Caps.Secondary">
        <item name="android:textColor">@color/text_dark_secondary</item>
    </style>

    <style name="TextStyle.Heading_Caps.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <!-- Heading Caps Heavy -->
    <style name="TextStyle.Heading_Caps_Heavy" parent="TextStyle.Caps_Heavy">
        <item name="android:textSize">@dimen/text_heading_caps</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStyle.Heading_Caps_Heavy.AccentSecondary">
        <item name="android:textColor">@color/accent_secondary</item>
    </style>

    <style name="TextStyle.Heading_Caps_Heavy.AccentTertiary">
        <item name="android:textColor">@color/accent_tertiary</item>
    </style>

    <!-- Body -->
    <style name="TextStyle.Body.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="TextStyle.Body.TertiaryLight">
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <style name="TextStyle.Body.Disabled">
        <item name="android:textColor">@color/text_disabled</item>
    </style>

    <style name="TextStyle.Body.Primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Body.White">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextStyle.Body.Critical">
        <item name="android:textColor">@color/text_critical</item>
    </style>

    <style name="TextStyle.Body.Attention">
        <item name="android:textColor">@color/text_attention</item>
    </style>

    <!-- Compact -->
    <style name="TextStyle.Compact" parent="TextStyle.Body">
        <item name="android:textSize">@dimen/text_compact_size</item>
    </style>

    <style name="TextStyle.Compact.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="TextStyle.Compact.Dark">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="TextStyle.Compact.Disabled">
        <item name="android:textColor">@color/text_disabled</item>
    </style>

    <style name="TextStyle.Compact.Primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Compact.AccentSecondary">
        <item name="android:textColor">@color/text_accent_secondary</item>
    </style>

    <style name="TextStyle.Compact.White">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextStyle.Compact.Critical">
        <item name="android:textColor">@color/text_critical</item>
    </style>

    <style name="TextStyle.Compact.SecondaryDark">
        <item name="android:textColor">@color/text_dark_secondary</item>
    </style>

    <!-- Body Heavy -->
    <style name="TextStyle.Body_Heavy.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="TextStyle.Body_Heavy.Dark">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="TextStyle.Body_Heavy.Primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Body_Heavy.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextStyle.Body_Heavy.Tertiary">
        <item name="android:textColor">@color/foreground_tertiary</item>
    </style>

    <style name="TextStyle.Body_Heavy.PrimaryHighlighted">
        <item name="android:textColor">@color/text_primary_highlighted</item>
    </style>

    <style name="TextStyle.Body_Heavy.Attention">
        <item name="android:textColor">@color/text_attention</item>
    </style>

    <style name="TextStyle.Body_Heavy.AccentSecondary">
        <item name="android:textColor">@color/text_accent_secondary</item>
    </style>

    <style name="TextStyle.Body_Heavy.Critical">
        <item name="android:textColor">@color/text_critical</item>
    </style>

    <style name="TextStyle.Body_Heavy.White">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextStyle.Body_Heavy.Disabled">
        <item name="android:textColor">@color/text_disabled</item>
    </style>

    <!-- Compact Heavy -->
    <style name="TextStyle.Compact_Heavy" parent="TextStyle.Body_Heavy">
        <item name="android:textSize">@dimen/text_compact_size</item>
    </style>

    <style name="TextStyle.Compact_Heavy.White">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextStyle.Compact_Heavy.Critical">
        <item name="android:textColor">@color/critical</item>
    </style>

    <style name="TextStyle.Compact_Heavy.Primary">
        <item name="android:textColor">@color/accent_primary</item>
    </style>

    <style name="TextStyle.Compact_Heavy.BackgroundPrimary">
        <item name="android:textColor">@color/background_primary</item>
    </style>

    <style name="TextStyle.Compact_Heavy.ForegroundPrimary">
        <item name="android:textColor">@color/foreground_primary</item>
    </style>

    <style name="TextStyle.Compact_Heavy.AccentSecondary">
        <item name="android:textColor">@color/text_accent_secondary</item>
    </style>

    <style name="TextStyle.Compact_Heavy.SecondaryDark">
        <item name="android:textColor">@color/text_dark_secondary</item>
    </style>

    <style name="TextStyle.Compact_Heavy.BackgroundAccent">
        <item name="android:textColor">@color/background_accent</item>
    </style>

    <style name="TextStyle.Compact_Heavy.ForegroundSecondaryLight">
        <item name="android:textColor">@color/foreground_secondary</item>
    </style>

    <!-- Meta -->
    <style name="TextStyle.Meta" parent="TextStyle.Body">
        <item name="android:textSize">@dimen/text_meta</item>
    </style>

    <style name="TextStyle.Meta_Heavy" parent="TextStyle.Body_Heavy">
        <item name="android:textSize">@dimen/text_meta</item>
    </style>

    <style name="TextStyle.Meta_Heavy.AccentSecondary">
        <item name="android:textColor">@color/text_accent_secondary</item>
    </style>

    <style name="TextStyle.Meta.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="TextStyle.Meta.White">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextStyle.Meta.SecondaryDark">
        <item name="android:textColor">@color/text_dark_secondary</item>
    </style>

    <style name="TextStyle.Meta.Tertiary">
        <item name="android:textColor">@color/accent_tertiary</item>
    </style>

    <style name="TextStyle.Meta.TertiaryLight">
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <style name="TextStyle.Meta_Heavy.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="TextStyle.Meta_Heavy.ForegroundTertiary">
        <item name="android:textColor">@color/foreground_tertiary</item>
    </style>

    <style name="TextStyle.Meta_Heavy.ForegroundSecondaryLight">
        <item name="android:textColor">@color/foreground_secondary</item>
    </style>

    <!-- Tag -->
    <style name="TextStyle.Micro" parent="TextStyle.Body">
        <item name="android:textSize">@dimen/text_micro</item>
    </style>

    <style name="TextStyle.Micro_Heavy" parent="TextStyle.Body_Heavy">
        <item name="android:textSize">@dimen/text_micro</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStyle.Micro.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="TextStyle.Micro_Heavy.Primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Micro_Heavy.ForegroundPrimaryDark">
        <item name="android:textColor">@color/background_primary</item>
    </style>

</resources>